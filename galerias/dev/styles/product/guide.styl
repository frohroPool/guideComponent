@import '../styleConfiguration'

*
	mx-reduce()

body
	mx-width(100%)
	display flex
	flex-flow row wrap
	-webkit-font-smoothing antialiased

ul
	list-style-type none
	
a
	text-decoration none
	background-color transparent

img
	width 100%
	
pre
	background-color #212124
	color #fff
	width 100%
	white-space pre-wrap
	padding 5px
	overflow scroll
	

code
	font-size 1.1em
	font-family 'Roboto Condensed',sans-serif
	width 100%
	color #4da570

button
	font-size 0.8em
	font-family 'Roboto Condensed',sans-serif

.header
	mx-height(72px)
	display flex
	position fixed
	top 0
	width 100%
	align-items center
	background #202124
	box-shadow 2px 4px 10px rgba(0,0,0,.2)
	color #fff
	overflow hidden
	z-index 4
	font-family 'Roboto Mono', monospace
.header .projectName a
	color #fff
	font-size 16px
	text-transform uppercase
	letter-spacing 3px
	margin-left 10px
.header .projectName a spanfirst-child
	margin-left 20px

.header .projectName a span
	margin-right 10px
	
.body
	mx-width(100%)
	display flex
	flex-flow row wrap

.breadcrums
	margin-left 30vw
	font-family 'Roboto Mono', monospace
	olor #fff
	font-size 16px
	text-transform uppercase
	letter-spacing 3px

.side-nav
	background #fff
	border-right 1px solid rgba(0,0,0,.12)
	bottom 0
	font-size 14px
	overflow-y auto
	padding 72px 0 40px
	position fixed
	top 0
	width 280px

.side-nav__section-title
	color #202124
	display block
	font-size 18px
	padding-bottom 12px
	padding-left 24px
	padding-top 40px

.side-nav__menu   
	border-bottom 1px solid rgba(0,0,0,.12)
	padding-bottom 40px
	

.side-nav__menu--sections
	padding-top 0
	
.side-nav__menu-item
	overflow hidden
	position relative

.side-nav__link
	color #5f6368
	display block
	line-height 18px
	padding 12px 48px
	padding-left 24px
	text-align left
	width 100%
	
.side-nav__link:hover
	cursor pointer
	color #202124	
	background-color #f5f5f5


.main
	display flex
	position relative
	left 320px
	top 80px
	width calc(90vw - 100px)
	// height calc(100vh - 100px)
	height auto
	font-family 'Roboto Condensed',sans-serif
	
.main-article
	display flex
	flex-direction column
	width calc(100vw - 300px)
	
.main-article > *
	width 100%
	padding 20px

.main-article__title
	font-size 60px


.main-article__component
	width 90%
	height 40vh
	
	display flex
	flex-direction row
	justify-content space-around
	padding-bottom 10px
	border-bottom 1px solid #202124
	
.main-article__component--view, .main-article__component--code
	overflow-y scroll

.main-article__component--view
	width 40%
.main-article__component--code
	width 55%
.main-article__component--title
	font-size 30px
	margin-bottom 20px

.main-article__component--device
	font-size 15px
	margin-bottom 5px


.action
	justify-content flex-start !important
	
.btnCss
	background #4da570 !important
.btnHtml
	background #e94d42 !important

