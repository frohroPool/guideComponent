@import '../molecules/list/simple.styl'
@import '../molecules/list/icon.styl'
@import '../molecules/list/buttonText.styl'

.footer-basic
	display flex
	width 100%
	height 100%
	flex-direction column
	justify-content center
	margin-top 10px
	font-family 'Source Sans Pro', sans-serif
.footer-basic > *
	width 100%
	margin-bottom 10px
	background white
.footer-basic-social
	padding 20px 0
	background #ececec
	border-bottom 1px solid #c7c3c3
.footer-basic-external
	width 80%
	align-self center
	border-bottom 1px solid #c7c3c3
.footer-basic-text p
	font-size 10px
	text-align center
	

@media screen and (max-width:1300px){
	.footer-basic{
		display: grid;
		grid-gap: 0px;
		grid-template-columns: 45% 45%;
		width: 100%;
		height: 100%;
	}
	.footer-basic > *{
		margin-bottom: 0px;
	}
	.footer-basic-social{
		grid-row: 1;
		grid-column: 1/3;
		padding: 5px 0;
		margin-bottom: 20px;
	}
	.footer-basic-social ul:first-child{
		flex-direction: row;
		margin-bottom: 0px;
	}
	.footer-basic-sections{
		grid-column: 1;
		grid-row: 2/4;
	}
	.footer-basic-notify,
	.footer-basic-external{
		grid-column: 2;
	}
	.footer-basic-notify{
		grid-row: 2;
	}
	.footer-basic-external{
		grid-row: 3;
		border-bottom: 0px;
	}
	.footer-basic-text{
		grid-row: 5;
		grid-column: 1/3;
		border-top: 1px solid #c7c3c3;
	}
}
