// Responsive ----------
.o-containerMalls
	height 100%
	width 100%
	margin-bottom 100px;
.o-containerMalls__title
	border-bottom: 1px solid colors.blue
	
.o-containerMalls__list
	display flex
	flex-flow row wrap
	height 100%
	justify-content flex-start
	list-style-type none
	margin-bottom 10px
	padding 0
	width 100%
.o-containerMalls__item
	height auto
	padding 5px
	width auto

@media screen and (max-width:1300px){
	.o-containerMalls{
		flex-flow row wrap
	}
}
