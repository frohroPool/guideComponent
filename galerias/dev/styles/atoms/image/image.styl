.a-figure, .a-figure__image, .a-figure__figcaption
	width 100%
	height 100%
	margin 0
	padding 0
.a-figure__figcaption
	display flex
	flex-flow row wrap
	height 100px
	margin 0
	padding 0
	position relative
	left 0
	top -4px
.a-figure__figcaption--portraitBig,
.a-figure__figcaption--portraitSmall
	justify-content center
.a-figure__figcaption--landscapeBig,
.a-figure__figcaption--landscapeSmall
	justify-content flex-start
	
.a-figure__title
	border 0
	font-family 'Roboto Condensed',sans-serif
	font-size 25px
	font-weight bold
	margin 0
	padding 5px
	text-transform capitalize
.a-figure__title--portraitBig,
.a-figure__title--portraitSmall
	border-top: 10px solid colors.pink;
	width 40%

.a-figure__title--landscapeBig,
.a-figure__title--landscapeSmall
	border-top: 15px solid colors.pink;
	width 20%
	margin-left 30px
	
.a-figure__description
	font-family 'Roboto Condensed',sans-serif
	font-size 25px
	text-transform capitalize
	margin 0
.a-figure__description--portraitBig,
.a-figure__description--portraitSmall
	text-align center
	width 100%
	
.a-figure__description--landscapeBig,
.a-figure__description--landscapeSmall
	text-align left
	width: calc(100% - 30px);
	padding-left 30px
	

.a-figure__descriptionLeft,
.a-figure__discount,
.a-figure__descriptionRight
	width auto
	
.a-figure__discount
	color: colors.pink;
	font-weight bold
	font-size 40px
	
.a-figure__title--portraitBig
	text-align center

.a-figure__title
	text-align center