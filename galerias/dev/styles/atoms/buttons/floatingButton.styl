.a-floatingButton
	letter-spacing .08em
	margin-left 5px
	text-decoration none
	text-transform uppercase
.a-floatingButton--extendedLeftIcon
	-webkit-font-smoothing: antialiased
	align-items center
	backgroundColor(colors.orange)
	border none
	border-radius 24px
	box-shadow: 0 3px 5px rgba(0,0,0,.2), 0 6px 10px rgba(0,0,0,.14), 0 1px 18px rgba(0,0,0,.12);
	cursor pointer
	display inline-flex
	font-size 14px
	font-weight 500
	height 48px
	justify-content center
	line-height 2.25rem
	max-width 100%
	padding 0 20px
	transition: box-shadow .28s cubic-bezier(.4,0,.2,1),opacity 15ms linear 30ms,transform .27s cubic-bezier(0,0,.2,1) 0ms,-webkit-box-shadow .28s cubic-bezier(.4,0,.2,1),-webkit-transform .27s cubic-bezier(0,0,.2,1) 0ms;
	typeFont(SansPro, lighter)
	width auto
	

.textEG
	textShadow(Montserrat, lighter, white, black)

.shortText
	textOverflow(150px)
