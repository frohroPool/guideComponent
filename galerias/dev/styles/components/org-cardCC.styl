.cardCC
    position relative
    float left
    overflow hidden
    min-width 300px
    max-width 300px
    max-height 250px
    background #FFF    

.cardCC-caption, .cardCC-caption > a
    position: absolute
    top 0
    left 0
    width 100%
    height 100%
    font-size 14px
    font-weight bolder


.cardCC-title {
    color: #FFF;
    font-size: 20px;
    font-weight: bolder;
    text-align: center;
    margin-left: -30px;    
}


.cardCC-links {
    margin-left: -30px;    
}
.cardCC-caption {
    top: auto;
    bottom: 5em;
    padding: 1em;
    height: 5em;
    background: rgb(17,23,53);
    background: -moz-linear-gradient(0deg, rgba(17,23,53,1) 0%, rgba(17,23,53,1) 50%, rgba(255,255,255,0) 100%);
    background: -webkit-linear-gradient(0deg, rgba(17,23,53,1) 0%, rgba(17,23,53,1) 50%, rgba(255,255,255,0) 100%);
    background: linear-gradient(0deg, rgba(17,23,53,1) 0%, rgba(17,23,53,1) 50%, rgba(255,255,255,0) 100%);
    /*filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#111735",endColorstr="#ffffff",GradientType=1);*/
    -webkit-transition: -webkit-transform 0.35s;
    transition: transform 0.35s;
    -webkit-transform: translate3d(0,100%,0);
    transform: translate3d(0,100%,0);
}


    .list-simple-item {
        color: #FFF;
        padding:8px;
    }

    .list-simple-item:hover {
        cursor: pointer;
        color: #f68620;
        text-decoration: none;
