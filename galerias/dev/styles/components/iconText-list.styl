// Responsive ----------
.iconText-list
	margin-bottom 10px
	overflow hidden
	display flex
	flex-direction row
	justify-content space-around
.iconText-list-item
	width 100%
	border-right 1px solid gray
	text-align center
	padding 5px
.iconText-list-item:last-child
	border-right 0px solid transparent
.iconText-list-item:hover
	cursor pointer
	background-color #f5f5f5
	
@media screen and (max-width:1300px){
	.iconText-list{
		flex-direction: column;
	}
	.iconText-list-item{
		border-right: 0px;
		text-align: left;
		border-bottom: 1px solid gray;
	}
	.iconText-list-item span, .iconText-list-item p{
		display: inline-block;
	}
	.iconText-list-item span{
		margin-right: 10px;
	}
	.iconText-list-item:last-child{
		border-bottom: 0px solid transparent;
	}
}