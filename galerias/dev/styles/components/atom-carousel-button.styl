.atom-carousel-button
    background #f2b908    
    height auto
    width auto 
    padding 15px
    border-radius 100px
    color #FFF
    font-weight: bolder

.atom-carousel-button:hover
    background #111735
    border 1px solid #111735
    color #FFF
    cursor pointer

[data-mode="atom-carousel-button__flat"]
    border none

[data-mode="atom-carousel-button__border"]
    border 1px solid #111735

[data-mode="atom-carousel-button__shadow"]{
    border:none;
    -webkit-box-shadow:0px 5px 10px 2px #a8a8a8;
    box-shadow:0px 5px 10px 2px #a8a8a8
}