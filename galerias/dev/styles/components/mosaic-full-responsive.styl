.mosaic-full-responsive
    display grid
    grid-template-columns repeat(12, 1fr)
    grid-template-rows 5vw 5vw  5vw 5vw
    grid-gap: 5px;


.mosaic-full-responsive__item-1
    grid-column 1 / span 12
    border 2px solid silver
    border-radius 10px
    background #DDD    

.mosaic-full-responsive__item-2
    grid-column 1 / span 6
    border 2px solid silver
    border-radius 10px
    background #DDD

.mosaic-full-responsive__item-3
    grid-column 7 / span 6
    border 2px solid silver
    border-radius 10px
    background #DDD

.mosaic-full-responsive__item-4
    grid-column 1 / span 4
    border 2px solid silver
    border-radius 10px
    background #DDD    

.mosaic-full-responsive__item-5
    grid-column 5 / span 4
    border 2px solid silver
    border-radius 10px
    background #DDD

.mosaic-full-responsive__item-6
    grid-column 9 / span 4
    border 2px solid silver
    border-radius 10px
    background #DDD

.mosaic-full-responsive__item-7
