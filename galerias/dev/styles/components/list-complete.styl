// Responsive ----------
.list-complete
	margin-bottom 10px
	overflow hidden
	display flex
	flex-direction row
	justify-content space-around
	list-style-type none
.list-complete-item
	width 100%
	border-right 1px solid gray
	text-align center
	padding 5px
.list-complete-item:last-child
	border-right 0px solid transparent
.list-complete-item:hover
	cursor pointer
	background-color #f5f5f5
	
@media screen and (max-width:1300px){
	.list-complete{
		flex-direction: column;
	}
	.list-complete-item{
		border-right: 0px;
		text-align: left;
		border-bottom: 1px solid gray;
	}
	.list-complete-item span, .list-complete-item p{
		display: inline-block;
	}
	.list-complete-item span{
		margin-right: 10px;
	}
	.list-complete-item:last-child{
		border-bottom: 0px solid transparent;
	}
}