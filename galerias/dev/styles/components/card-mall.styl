.card-mall
	width 400px
	height 340px
	display flex
	flex-flow row wrap
	position relative
	box-shadow 1px 1px 5px 1px #92949c
	
.card-mall__modal
	position absolute
	left 0
	top 0
	background white
	display none
	
.card-mall-media img
	width 100%
	height 251px

.card-mall__brief
	width inherit
	height 30%
	display flex
	flex-flow row wrap
	
.card-mall__brief--Title
	width 82%
	height 22px
	margin-left 20px
	margin-top 10px
	
.card-mall__brief--Title h3
	font-size 22px
	font-family 'Source Sans Pro', sans-serif
	font-weight normal
	color #0D1227
	
	
.card-mall__brief--reveal
	font-size 22px
	width 10%
	height 22px
	margin-top 10px
	
.card-mall__brief--anchor
	width 100%
	margin-left 20px
	
.card-mall__brief--anchor a
	font-size 12px
	font-family 'Source Sans Pro', sans-serif
	font-weight normal
	color #0D1227