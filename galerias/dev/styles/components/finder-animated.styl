.finder-animated-container  
  max-width 90%  
 

.finder-animated-search-container
  overflow hidden
  float right
  height 4em
  width 4em
  border-radius 2em
  box-shadow 0 0 5px #111735
  -moz-transition all 0.35s
  -webkit-transition all 0.35s 

.finder-animated-search-container:hover, .finder-animated-search-container:focus
  width 30em
  border-radius 5px 2em 2em 5px
  outline none;

.finder-animated-search-container:hover input, .finder-animated-search-container:focus input
  display inline-block
  width 19em
  padding 10px

.finder-animated-text
  -moz-appearance none
  -webkit-appearance none
  appearance none
  float left
  width 0em
  height 1em
  margin 1em
  margin-right -4.5em
  background #fff
  color #111735
  font-size 15px  
  padding 0px
  border 0
  border-radius 5px  
  -moz-transition all 0.25s
  -webkit-transition all 0.25s
 
.finder-animated-text:focus
  outline none
  box-shadow 0 -1px 1px rgba(255,255,255,0.25), 0 1px 5px rgba(0,0,0,0.15)

.finder-animated-button
  float right
  width 1.75em
  height 1.75em
  margin 0.125em
  background #111735
  text-align center
  font-size 2em
  color #FFF
  border-radius 50%
  box-shadow 0 -1px 1px rgba(255,255,255,0.25), 0 1px 1px rgba(0,0,0,0.25)
  text-shadow 0 -2px 1px rgba(0,0,0,0.3)
 
.finder-animated-button i
  margin-top 0.3em
 
.finder-animated-button:active
  border 0 !important
  text-shadow 0 0 0


@media screen and (max-width:1300px)
    .finder-animated-text        
        font-size 11px
    
    .finder-right-icon-button 
        font-size: 10px;

    .finder-animated-search-container:hover, .finder-animated-search-container:focus
      width 19em    
    