.card-coverMagazine
	width 500px
	height 400px
	display flex
	flex-flow row wrap
.card-coverMagazine__wrapper
	position relative
	width 100%
	height 100%
.card-coverMagazine__wrapper > *
	position absolute
	
.card-coverMagazine__wrapper-media, .card-coverMagazine__wrapper-media img
	width 100%
	height 100%
	z-index 1
.card-coverMagazine__wrapper-title
	width 100%
	height 100px
	left 0
	top 0
	z-index 2
	text-align center
	color #e0274f
	font-size 2.5em
.card-coverMagazine__wrapper-title:hover
	color white
	cursor pointer
	background rgba(0,0,0,0.2)
	box-shadow 1px 10px 14px rgba(0,0,0,0.2)
	
.card-coverMagazine__wrapper-time
	font-size 15px
	font-family 'Roboto Condensed',sans-serif
	color white
	text-transform uppercase
	width 20%
	height 15px
	left 70%
	top 100px
	z-index 2
	
.card-coverMagazine__wrapper-brief
	width 30%
	height 50%
	left 5%
	top 30%
	font-size 15px
	font-family 'Roboto Condensed',sans-serif
	color white
	z-index 2
	
.card-coverMagazine__wrapper-author
	text-transform uppercase
	font-size 15px
	width 20%
	height 30px
	left 70%
	top calc(100% - 40px)
	z-index 2
	font-family 'Roboto Condensed',sans-serif
	color white
	