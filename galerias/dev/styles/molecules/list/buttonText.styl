@import '../../resources/colors'
// Responsive ----------
.list-buttonText
	margin-bottom 10px
	overflow hidden
	display flex
	flex-direction row
	justify-content space-around
	list-style-type none
.list-buttonText-item
	width 100%
	text-align center
	padding 5px
	width auto

.list-buttonText-item:hover, .list-buttonText-item button:hover
	cursor pointer
	
.list-buttonText-item button
	border 0
	padding 10px
	background: colors.darkGray;
	color white

	
	
@media screen and (max-width:1300px){
	.list-buttonText{
		flex-direction: column;
	}
	.list-buttonText-item, .list-buttonText-item button{
		text-align: center;
		width: 100%;
	}
}
