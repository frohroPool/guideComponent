// Responsive ----------
.list-complete
	margin-bottom 10px
	overflow hidden
	display flex
	flex-direction row
	justify-content space-around
	list-style-type none
.list-complete-item
	width 100%
	font-family 'Source Sans Pro', sans-serif
	text-align center
	padding 5px
	display flex
	flex-direction column
	justify-content center
	align-items center
.list-complete-item:last-child
	border-right 0px solid transparent
.list-complete-item:hover
	cursor pointer
	// background-color #f5f5f5
	
[data-mode="list-complete__list-vrtPipe"] li
	border-right 1px solid gray

[data-mode="list-complete__list-hrtPipe"] li
	border-bottom 1px solid gray
[data-mode="list-complete__list-hrtPipe"] li:hover
	border-bottom 3px solid gray
	
[data-mode="list-complete__list-vrt"] li
	border-right 1px solid gray

[data-mode="list-complete__list-hrt"] li
	border-right 1px solid gray
	flex-direction row
[data-mode="list-complete__list-hrt"] li:hover span
	color #F5A623
[data-mode="list-complete__list-hrt"] li > *
	display inline-block
	vertical-align top
	padding 5px	
	
	
	
@media screen and (max-width:1300px){
	.list-complete{
		flex-direction: column;
	}
	.list-complete-item{
		border-right: 0px;
		text-align: left;
		border-bottom: 1px solid gray;
	}
	.list-complete-item span, .list-complete-item p{
		display: inline-block;
	}
	.list-complete-item span{
		margin-right: 10px;
	}
	.list-complete-item:last-child{
		border-bottom: 0px solid transparent;
	}
}