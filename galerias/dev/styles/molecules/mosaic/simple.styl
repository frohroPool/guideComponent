.m-mosaicSimple
	padding: 0;
	list-style: none;
	display: -webkit-box;
	display: -moz-box;
	display: -ms-flexbox;
	display: -moz-flex;
	display: -webkit-flex;
	display: flex;
	justify-content: center;
	-webkit-flex-flow: wrap;

.m-mosaicSimple__item    
	padding 0
	margin-top 1%
	flex-grow 1
	border 2px solid silver
	border-radius 20px
	background #DDD    
	width 150px
	height 150px
	align-self center

@media screen and (max-width:1300px){
	.m-mosaicSimple{
		flex-direction: column;
	}
	.m-mosaicSimple__item{
		text-align: center;
	}	
}
