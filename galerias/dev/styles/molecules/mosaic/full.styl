.mosaic-full
	display grid
	
[data-mode="mosaic-full__adaptative"], 
[data-mode="mosaic-full__responsive"]{
	grid-template-columns repeat(12, 1fr)
	grid-template-rows 5vw 5vw  5vw 5vw
	grid-gap: 5px;
} 

.mosaic-full__item-1
	grid-column 1 / span 12
	border 2px solid silver
	border-radius 10px
	background #DDD    

.mosaic-full__item-2
	grid-column 1 / span 6
	border 2px solid silver
	border-radius 10px
	background #DDD

.mosaic-full__item-3
	grid-column 7 / span 6
	border 2px solid silver
	border-radius 10px
	background #DDD

.mosaic-full__item-4
	grid-column 1 / span 4
	border 2px solid silver
	border-radius 10px
	background #DDD    

.mosaic-full__item-5
	grid-column 5 / span 4
	border 2px solid silver
	border-radius 10px
	background #DDD

.mosaic-full__item-6
	grid-column 9 / span 4
	border 2px solid silver
	border-radius 10px
	background #DDD

.mosaic-full__item-7
	grid-column 1 / span 12
	border 2px solid silver
	border-radius 10px
	background #DDD


@media screen and (max-width:1300px){
	[data-mode="mosaic-full__adaptative"]{
		display: flex;
		flex-direction: column;
	}       
}