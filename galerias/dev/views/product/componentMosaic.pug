<!DOCTYPE html>
html(lang="es")
	- var currentPage = 'componentMosaic'
	include ../components/structureConfiguration
	include ../components/headers
	body
		section(class="header")
			section.projectName
				a(href="/")
					span(class="icon-home")
					span
						|	UX Design

			section(class="breadcrums")
				p(class="breadcrums-title")
					| Components > Mosaic
			section.mainMenu
		section(class="body")
			nav(class="side-nav")
				span(class="side-nav__section-title")
					|	Material Organisms
				ul(class="side-nav__menu side-nav__menu--sections")
					each v0,i0 in config.organisms
						li(class='side-nav__menu-item')
							a(href="" + v0.src, target="" + v0.target, class='side-nav__link') #{v0.name}

				span(class="side-nav__section-title")
					|	Material Components
				ul(class="side-nav__menu side-nav__menu--sections")
					each v0,i0 in config.components
						li(class='side-nav__menu-item')
							a(href="" + v0.src, target="" + v0.target, class='side-nav__link') #{v0.name}
			

			section(class="main")
				article(class="main-article")
					h1(class="main-article__title")
						| Mosaic
					nav(class="main-article__btnCodes")
						button(id="allCssList" class="getStyle all") Show CSS
						button(id="allHtmlList" class="getHTML all") Show HTML
					div(class="showAllCssRules hiddeCssRule" id="showAllCssRules")
					div(class="showAllHtmlRules hiddeHtmlRule" id="showAllHtmlRules")
					p(class="main-article__description")
						| Navigational transitions occur when users move between screens, such as from a home screen to a detail screen.
					

					// --------------------------------------------------------				

					div(class="main-article__component")
						div(class="main-article__component--view")
							h2(class="main-article__component--title")
								| Simple-mosaic
							- var menu = ['styles', 'html'];
							- var menuColor = ['simple-mosaic btnCss', 'simple-mosaic btnHtml'];
							include ../components/buttonText-list


							include ../components/simple-mosaic
						div(class="main-article__component--code")
							h2(class="main-article__component--title")
								| Simple-mosaic-code
							- var codeComponent = 'code-simple-mosaic';
							include ../components/code

					// --------------------------------------------------------				

					div(class="main-article__component")
						div(class="main-article__component--view")
							h2(class="main-article__component--title")
								| Custom-mosaic
							- var menu = ['styles', 'html'];
							- var menuColor = ['custom-mosaic btnCss', 'custom-mosaic btnHtml'];
							include ../components/buttonText-list


							include ../components/custom-mosaic
						div(class="main-article__component--code")
							h2(class="main-article__component--title")
								| Custom-mosaic-code
							- var codeComponent = 'code-custom-mosaic';
							include ../components/code

                    
					div(class="main-article__component")
						div(class="main-article__component--view")
							h2(class="main-article__component--title")
								| Custom-mosaic-2
							- var menu = ['styles', 'html'];
							- var menuColor = ['custom-mosaic-2 btnCss', 'custom-mosaic-2 btnHtml'];
							include ../components/buttonText-list


							include ../components/custom-mosaic-2
						div(class="main-article__component--code")
							h2(class="main-article__component--title")
								| Custom-mosaic-2-code
							- var codeComponent = 'code-custom-mosaic-2';
							include ../components/code